/* miniprogram/pages/discover/discover.wxss */
.flex-content {
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.flex-wrp {
  display: flex;
  border-bottom: 1px groove rgb(221, 221, 236);
}

.on {
  color: blue;
}

.flex-item {
  padding: 10px 10px;
  flex: 1;
}

.activity {
  text-align: right;
}

.collection {
  text-align: left;
}

.null_collection {
  padding: 100px 0;
  text-align: center;
}

.null_collection-title {
  padding: 20px 0;
  font-size: 12px;
  font-family: sans-serif;
  color: rgb(113, 113, 122);
}

.flex-section {
  flex: 1;
}

.section {
  height: 400px;
  width: 100%;
}

.activity_one {
  margin: 20px;
}

.activity-img {
  width: 280px;
  height: 210px;
  border-radius: 10px;
}

.icon-img {
  width: 100px;
  height: 100px;
  border-radius: 65%;
}