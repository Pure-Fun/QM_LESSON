/* miniprogram/pages/me/me.wxss */
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 12px;
  color: #aaa;
}

.show {
  margin: 20px 0;
  display: flex;
  border: 1px solid darkblue;
  border-radius: 10px;
}

.show-item {
  padding: 6px 10px;
  flex: 1;
}

.usermotto {
  margin: 25px 0;
  font-size: 12px;
}

.icon-img {
  padding: 20px 10px 10px 3px;
}

view image {
  width: 100px;
  height: 100px;
  border-radius: 65%;
}